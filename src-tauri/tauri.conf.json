{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "SandraDC",
  "version": "0.1.2",
  "identifier": "com.code-epic.sandra-desktop-container",
  "build": {
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist/sandra-desktop-container/browser"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Sandra Desktop Container",
        "label": "main",
        "width": 1440,
        "height": 900,
        "maximized": true,
        "visible": false,
        "minWidth": 1024,
        "minHeight": 768
      },
      {
        "width": 750,
        "height": 550,
        "decorations": false,
        "url": "/assets/splash.html",
        "label": "splashscreen",
        "center": true,
        "transparent": true,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]

  }
}
